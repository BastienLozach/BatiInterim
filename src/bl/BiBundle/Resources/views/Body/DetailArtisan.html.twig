{% extends "blBiBundle:Template:Template.html.twig"%}

{% block title %}
    DÃ©tail d'un Artisan
{% endblock %}

{% block body %}
<div class="row">
    
	<dl class="dl-horizontal">
        <dt>Nom</dt>
        <dd>{{artisan.nom}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Prenom</dt>
        <dd>{{artisan.prenom}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Adresse</dt>
        <dd>{{artisan.adresse}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Date de naissance</dt>
        <dd>{{artisan.datenaissance.format("d/m/y")}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Date d'embauche</dt>
        <dd>{{artisan.dateembauche.format("d/m/y")}}</dd>
    </dl>
	
    <dl class="dl-horizontal">
        <dt>Corps de Metier</dt>
        <dd>{{artisan.corpsMetier.libelle}}</dd>
    </dl>
    
         
    <a href="{{ path("bl_bi_gestionnaire_modifierArtisan", {"id" : artisan.id}) }}">
        <button class="btn btn-primary">Modifier</button>
    </a>
	
	<a href="{{ path("bl_bi_gestionnaire_supprimerArtisan", {"id" : artisan.id}) }}">
        <button class="btn btn-danger">Supprimer</button>
    </a>
	
	<br/>
	
    <a href="{{ path("bl_bi_gestionnaire_listeArtisans") }}">
        <button class="btn btn-primary">Retour</button>
    </a>
    
    
</div>
{% endblock %}