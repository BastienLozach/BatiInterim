{% extends "blBiBundle:Template:Template.html.twig"%}

{% block title %}
    Détail d'un Chantier
{% endblock %}

{% block body %}
<div class="row">
    
	<dl class="dl-horizontal">
        <dt>Nom</dt>
        <dd>{{chantier.nom}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Date de début</dt>
        <dd>{{chantier.dateDebut.format("m/d/y")}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Date de fin</dt>
        <dd>{{chantier.dateFin.format("m/d/y")}}</dd>
    </dl>
	
    
	<h1>Missions</h1>
            
    <table class="table table-bordered">    
        
        <th>intitulé</th>
		<th>Corps de Metier</th>
        <th>artisans</th>
        <th>prix journalier</th>
        <th>date de debut</th>
        <th>date de fin</th>
        
        
        {% for mission in chantier.missions %}
        <tr>
            <td>{{mission.intitule}}</td>
            <td>{{mission.corpsMetier.libelle}}</td>
            <td>{{mission.nbreArtisans}}</td>
			<td>{{mission.prixJournalier}}</td>
			<td>{{mission.dateDebut.format("m/d/y")}}</td>
			<td>{{mission.dateFin.format("m/d/y")}}</td>
            <td>
				<a href="{{ path("bl_bi_chefChantier_listeAffectations", {"id" : mission.id}) }}">
					<button class="btn btn-primary">Affectations</button>
				</a>
			
			    <a href="{{ path("bl_bi_chefChantier_modifierMission", {"id" : mission.id}) }}">
					<button class="btn btn-info">Modifier</button>
				</a>
	
				<a href="{{ path("bl_bi_chefChantier_supprimerMission", {"id" : mission.id}) }}">
					<button class="btn btn-danger">Supprimer</button>
				</a>
			
			</td>
        </tr>   
        
        {% endfor%}
        
				
    </table>    

	<a href="{{ path("bl_bi_chefChantier_ajouterMission", {"id" : chantier.id}) }}">
        <button class="btn btn-sucess">Ajouter une Mission</button>
    </a>

    <br/>
	<br/>
	
    <a href="{{ path("bl_bi_chefChantier_modifierChantier", {"id" : chantier.id}) }}">
        <button class="btn btn-primary">Modifier</button>
    </a>
	
	<a href="{{ path("bl_bi_chefChantier_supprimerChantier", {"id" : chantier.id}) }}">
        <button class="btn btn-danger">Supprimer</button>
    </a>
	
	<br/>
	
	<a href="{{ path("bl_bi_chefChantier_listeChantiers", {"id" : chantier.chefChantier.id}) }}">
        <button class="btn btn-primary">Retour</button>
    </a>
    
    
</div>
{% endblock %}