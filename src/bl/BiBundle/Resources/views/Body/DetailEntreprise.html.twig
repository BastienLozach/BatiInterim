{% extends "blBiBundle:Template:Template.html.twig"%}

{% block title %}
    Détail d'une Entreprise
{% endblock %}

{% block body %}
<div class="row">
    
	<dl class="dl-horizontal">
        <dt>Nom</dt>
        <dd>{{entreprise.nom}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Téléphone</dt>
        <dd>{{entreprise.telephone}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Adresse</dt>
        <dd>{{entreprise.adresse}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Ville</dt>
        <dd>{{entreprise.ville}}</dd>
    </dl>
	
	<dl class="dl-horizontal">
        <dt>Code Postal</dt>
        <dd>{{entreprise.cp}}</dd>
    </dl>
	
    <dl class="dl-horizontal">
        <dt>Secteur</dt>
        <dd>{{entreprise.secteur}}</dd>
    </dl>
    
	<h1>Chefs de Chantier</h1>
            
    <table class="table table-bordered">    
        
        <th>Nom</th>
        <th>Prenom</th>
        <th>login</th>
        <th>actions</th>
        {% for chef in entreprise.chefChantier %}
        <tr>
            <td>{{chef.nom}}</td>
            <td>{{chef.prenom}}</td>
            <td>{{chef.utilisateur.login}}</td>
            <td>
			    <a href="{{ path("bl_bi_gestionnaire_modifierChefChantier", {"id" : chef.id}) }}">
					<button class="btn btn-primary">Modifier</button>
				</a>
	
				<a href="{{ path("bl_bi_gestionnaire_supprimerChefChantier", {"id" : chef.id}) }}">
					<button class="btn btn-danger">Supprimer</button>
				</a>
			
			</td>
        </tr>   
        
        {% endfor%}
				
    </table>    

	<a href="{{ path("bl_bi_gestionnaire_ajouterChefChantier", {"id" : entreprise.id}) }}">
        <button class="btn btn-sucess">Ajouter un Chef de Chantier</button>
    </a>

    <br/>
	<br/>
	
    <a href="{{ path("bl_bi_gestionnaire_modifierEntreprise", {"id" : entreprise.id}) }}">
        <button class="btn btn-primary">Modifier</button>
    </a>
	
	<a href="{{ path("bl_bi_gestionnaire_supprimerEntreprise", {"id" : entreprise.id}) }}">
        <button class="btn btn-danger">Supprimer</button>
    </a>
	
	<br/>
	
	<a href="{{ path("bl_bi_gestionnaire_listeEntreprises") }}">
        <button class="btn btn-primary">Retour</button>
    </a>
    
    
</div>
{% endblock %}